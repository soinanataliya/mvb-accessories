{
    "$schema": "https://json.schemastore.org/tsconfig",
	"display": "Node",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
        "baseUrl": "."
	},
    "include": ["."],
	"exclude": ["node_modules"],
    "ts-node": {
        "transpileOnly": true
    }
  }
